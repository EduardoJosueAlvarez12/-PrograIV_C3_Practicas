<div class="row justify-content-md-center">
    <div class="col-md-4">
        <h1>Register</h1>
        {{#if message}}
            <div class="alert {{ messageClass }}">
                {{message}}
            </div>
        {{/if}}
        <form method="POST" action="/register">
            <div class="form-group">
                Full Name
                <input type="text" name="fullName" id="fullName" clas="form-control">
            </div>
            <div class="form-group">
                Email Address
                <input type="text" name="email" id="email" clas="form-control">
            </div>
            <div class="form-group">
                Password
                <input type="password" name="password" id="password" clas="form-control">
            </div>
            <div class="form-group">
                Confirm Password
                <input type="password" name="confirmPassword" id="confirmPassword" clas="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

</div>